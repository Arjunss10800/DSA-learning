import java.util.Scanner;
public class Main{
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        double v1 = sc.nextInt();
        double r = sc.nextInt();
        double t = sc.nextInt();
        double v2 = v1*Math.pow((1-r/100),t);
        System.out.println(v2);
        }
    }
    
